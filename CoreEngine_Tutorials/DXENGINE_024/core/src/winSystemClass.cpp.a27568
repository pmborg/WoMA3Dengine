	WOMA_LOGManager_DebugMSGAUTO((TCHAR*)TEXT("---------------------------------\n"));

	if (AppSettings->FULL_SCREEN)
		allowResize = true;					// Force: "Allow" User to resize to FullScreen.

	// --------------------------------------------------------------------------------------------
	// PURPOSE: Check all Monitors available
	// --------------------------------------------------------------------------------------------
	DEVMODE devMode = { 0 };
